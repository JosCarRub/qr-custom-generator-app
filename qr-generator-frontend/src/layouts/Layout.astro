---
import '../styles/global.css'
import { ClientRouter } from 'astro:transitions';
import Analytics from '@vercel/analytics/astro';


const siteTitle = "QR Generator | Generador de Códigos QR Personalizados";
const siteDescription = "Crea códigos QR únicos y personalizados en segundos. Añade colores, logotipos y estilos para tus QR, listos para descargar e imprimir.";
const siteUrl = "https://qr-custom-generator.vercel.app"; 
const imageUrl = `${siteUrl}/social-preview.png`; 
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="El generador de códigos QR de referencia" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>QR Custom Generator</title>

		<meta property="og:title" content={siteTitle} />
		<meta property="og:description" content={siteDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={siteUrl} />
		<meta property="og:image" content={imageUrl} />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:locale" content="es_ES" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={siteTitle} />
		<meta name="twitter:description" content={siteDescription} />
		<meta name="twitter:image" content={imageUrl} />

		<link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

		<ClientRouter />
	</head>
	<body class="bg-gray-900 text-white font-sans">
		<slot />
        <Analytics />
	</body>
</html>

<style is:global>

    body { 
        font-family: 'Inter', system-ui, sans-serif; 
        background-color: #0f172a; /* bg-slate-900 */
        color: #f1f5f9; /* text-slate-100 */
        transition: background-color 0.3s ease, color 0.3s ease;
    }
    html.light body {
        background-color: #f1f5f9; /* bg-slate-100 */
        color: #1e293b; /* text-slate-800 */
    }
    
    .qr-pattern {
        background-image: radial-gradient(circle at 25px 25px, #374151 2px, transparent 2px);
        background-size: 50px 50px;
        opacity: 0.05;
    }
    
	
	.glass-morphism {
		backdrop-filter: blur(16px);
		-webkit-backdrop-filter: blur(16px);
	}
	
	.text-gradient {
		background: linear-gradient(135deg, #f59e0b, #d97706);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	.qr-pattern {
		background-image: radial-gradient(circle at 25px 25px, #374151 2px, transparent 2px);
		background-size: 50px 50px;
		opacity: 0.05;
	}

    @keyframes crystal-slide-out {
        from {
            transform: perspective(1000px) translateZ(0);
            opacity: 1;
            filter: blur(0);
        }
        to {
            transform: perspective(1000px) translateZ(-50px);
            opacity: 0;
            filter: blur(5px);
        }
    }

    @keyframes crystal-slide-in {
        from {
            transform: perspective(1000px) translateZ(50px);
            opacity: 0;
            filter: blur(5px);
        }
        to {
            transform: perspective(1000px) translateZ(0);
            opacity: 1;
            filter: blur(0);
        }
    }

    ::view-transition-old(root) {
        animation: crystal-slide-out 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }
    ::view-transition-new(root) {
        animation: crystal-slide-in 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    ::view-transition-old(main-title),
    ::view-transition-new(main-title) {
        animation: none;
        animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }

    @media (prefers-reduced-motion: reduce) {
        ::view-transition-old(root),
        ::view-transition-new(root) {
            animation: none;
        }
    }

	
</style>
